{% extends 'app.twig' %}
{% block content  %}
    <section class="content-header">
        <h1>
            Review
            <small>#{{ review.id }}</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">Invoice</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> {{ review.title }}
                    <small class="pull-right">created: {{ review.created_at }}</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12">
                <h4><strong>Category</strong></h4>
                <div>{{ review.category }}</div>
                <h4><strong>Content</strong></h4>
                <div>{{ review.content }}</div>
                <h4><strong>Source</strong></h4>
                <div>{{ review.source }}</div>
                <h4><strong>Published</strong></h4>
                <div>{{ review.published }}</div>
                <h4><strong>Created</strong></h4>
                <div>{{ review.created_at }}</div>
                <h4><strong>Updated</strong></h4>
                <div>{{ review.updated_at }}</div>


              {#
                   <table class="table table-striped"><thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Content</th>
                        <th>Source</th>
                        <th>Published</th>
                        <th>Created</th>
                        <th>Updated</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr><td>{{ review.id }}</td> <td>{{ review.id }}</td>
                        <td>{{ review.title }}</td>
                        <td>{{ review.category }}</td>
                        <td>{{ review.content }}</td>
                        <td>{{ review.source }}</td>
                        <td>{{ review.published }}</td>
                        <td>{{ review.created }}</td>
                        <td>{{ review.updated }}</td>
                    </tr>
                    </tbody>
                </table>#}
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}


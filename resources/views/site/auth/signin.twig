{% extends 'app.twig' %}
{% block content  %}


        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-3">
                <h1 class="text-center login-title">Sign in to continue to Bootsnipp</h1>
                <div class="panel panel-default">
                    <div class=" panel-heading">
                        Sign in
                    </div>
                    <div class=" panel-body">

                    <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="on">
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label for="email" >Email</label>
                            <input type="email" class="form-control" name="email" value="{{ old.email }}" id="email" placeholder="Email Address">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first}}</span>
                            {% endif %}
                        </div>

                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password" >Password</label>
                            <input type="password" class="form-control" name="password" id="password" >
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first}}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sign in</button>
                    {{ csrf.field | raw }}
                    </form>
                    </div>

                </div>
                <a href="#" class="text-center new-account">Create an account </a>
            </div>
        </div>

{% endblock %}